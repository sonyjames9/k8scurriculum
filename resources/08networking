metadata:
  name: ubuntu-sleeper-pod
spec:
  containers:
    - name: ubuntu-sleeper
      image: ubuntu-sleeper
      command: ["sleep2.0"] #is same as docker ENTRYPOINT
      args: ["10"]          # is same as docker ENTRYPOINT

